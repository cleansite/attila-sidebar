{{!< default}}
<div class="content">
	<header class="blog-header">
		<div class="inner">
			<div class="box">
				<div class="row">
					<div class="column">
						<img class="image-fluid" src="{{@custom.homepage_image}}" width="500px">
					</div>
					<div class="double-column flex-center">
						<h1 class="blog-name">{{@custom.homepage_heading}}</h1>
						<p class="post-excerpt">{{@custom.homepage_description}}</p>
							<div class="kg-card kg-button-card kg-align-left" style="font-size: 1.75em;margin-top:2rem;">
								<a href="{{@custom.homepage_cta_link}}" class="kg-btn kg-btn-accent">{{@custom.homepage_cta}}</a>
							</div>
					</div>
				</div>
			</div>
		</div>
	</header>

	<div id="index" class="container">
		<main class="site-main" role="main" style="margin-top:15rem;">
			<div class="post-feed gh-feed">
				<div class="grid-item grid-sizer"></div>
			
			{{> "loop"}}

			</div>
		</main>

	</div>